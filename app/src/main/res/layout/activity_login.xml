<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        android:background="@drawable/logo_hutech"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:fontFamily="@font/font_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Canteen"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2641C2"
        android:letterSpacing="0.05"
        android:layout_marginBottom="50dp"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/textInputLayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:maxLines="1"
        android:hint="Số điện thoại"
        app:startIconDrawable="@drawable/smartphone"
        app:endIconMode="clear_text"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxStrokeColor="#68c1da"
        app:boxStrokeWidth="1dp"
        app:startIconTint="#68c1da"
        app:hintTextColor="#68c1da">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textStyle="bold"
            android:maxLength="21"
            android:maxLines="1"
            android:outlineSpotShadowColor="@color/black"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/textInputLayout3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:maxLines="1"
        android:hint="Mật khẩu"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:startIconDrawable="@drawable/padlock"
        app:endIconMode="password_toggle"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxStrokeColor="#68c1da"
        app:boxStrokeWidth="1dp"
        app:startIconTint="#68c1da"
        app:hintTextColor="#68c1da">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Password"
            android:maxLines="1"
            android:maxLength="12"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:letterSpacing="0.05"
        android:fontFamily="@font/font_food"
        android:text="Quên mật khẩu ?"
        android:textColor="#5e7ccb"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Đăng nhập"
        android:textSize="18sp"
        android:scaleType="fitEnd"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_food"
        android:layout_marginEnd="40dp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        />

    <TextView
        android:textColor="#5e7ccb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:fontFamily="@font/font_food"
        android:textStyle="bold"
        android:gravity="bottom"
        android:layout_marginTop="50dp"
        android:letterSpacing="0.05"
        android:textSize="15sp"
        android:layout_gravity="bottom|center" />
</LinearLayout>